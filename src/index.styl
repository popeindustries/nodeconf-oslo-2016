#crap {
  color: #524944;
  opacity: 0;
  transition-duration: TRANSITION_DURATION_LONG;
  .bg {
    bg('src/images/nodeconf-9.jpg');
    full();
    -webkit-filter: brightness(4);
    filter: brightness(4);
    transition: all TRANSITION_DURATION_LONG TRANSITION_TIMING_CUBIC_OUT;
    z-index: -1;
  }
  .diagram {
    fill: none;
    height: 10vw
    left: 50%;
    position: absolute;
    stroke-width: 1px;
    stroke: black;
    top: 20%;
    transition: all TRANSITION_DURATION_SHORT ease-out;
    width: 10vw;
    svg {
      height: 100%;
      left: 0;
      position: absolute;
      top: 0;
      width: 100%;
    }
  }
  .server {
    transform: translateX(-175%);
  }
  .client {
    transform: translateX(50%);
  }
  .document {
    fill: white;
    opacity: 0;
    transform: translate(-175%, 0%) scale(0.6);
    transition: opacity TRANSITION_DURATION_SHORT linear, transform TRANSITION_DURATION TRANSITION_TIMING_CUBIC_OUT;
  }
  .document-1 {
    .loader {
      fill: black;
      transition: visibility 10ms TRANSITION_DURATION_LONG linear;
      visibility: hidden;
      circle {
        animation: loadBounce 0.4s linear 0s infinite alternate-reverse;
      }
      circle + circle {
        animation: loadBounce 0.4s linear -0.2s infinite alternate-reverse;
      }
      circle + circle + circle{
        animation: loadBounce 0.4s linear -0.4s infinite alternate-reverse;
      }
    }
    .content {
      transition: visibility 10ms TRANSITION_DURATION_LONG * 3 linear;
      visibility: hidden;
    }
  }
  .document-2 {
    transition-delay: TRANSITION_DURATION_LONG;
  }
  .points {
    full();
    bottom: 15%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    transition: opacity TRANSITION_DURATION linear;
    .point {
      font-size: 4vw;
      margin: 0 0 0 40%;
      opacity: 0;
      transition: all TRANSITION_DURATION_SHORT linear;
    }
  }
  &.show {
    opacity: 1;
    .bg {
      -webkit-filter: brightness(1);
      filter: brightness(1);
    }
  }
  &.step-1 {
    .document-1 {
      opacity: 1;
      transform: translate(50%, 0);
      .loader {
        visibility: visible;
      }
      .content {
        visibility: visible;
      }
    }
  }
  &.step-2 {
    .document-1 {
      display: none;
    }
    .document-2 {
      opacity: 1;
      transform: translate(50%, 0);
    }
  }
  &.step-3 {
    .server,
    .client,
    .document-2 {
      display: none;
    }
    .point-1 {
      opacity: 1;
    }
  }
  &.step-4 {
    .point-2 {
      opacity: 1;
    }
  }
  &.step-5 {
    .point-3 {
      opacity: 1;
    }
  }
  &.step-6 {
    .point-4 {
      opacity: 1;
    }
  }
  &.step-7 {
    .point {
      color: lighten(#524944, 20%);
      &::first-letter {
        color: #DB1A7E;
        font-weight: 900;
        padding-right: 0.8vw;
      }
    }
    .point-2 {
      transition-delay: 25ms;
    }
    .point-3 {
      transition-delay: 100ms;
    }
    .point-4 {
      transition-delay: 150ms;
    }
  }
  &.step-8 {
    .point {
      opacity: 0;
    }
  }
  &.hide {
    opacity: 0;
    .bg {
      -webkit-filter: brightness(0);
      filter: brightness(0);
    }
    .points {
      opacity: 0;
    }
  }
}

#express {
  background-color: BLACK;
  opacity: 0;
  transition-duration: TRANSITION_DURATION_LONG;
  .bg {
    bg('src/images/nodeconf-15.jpg');
    full();
    -webkit-filter: brightness(0);
    filter: brightness(0);
    transition: all TRANSITION_DURATION_LONG TRANSITION_TIMING_CUBIC_OUT;
    z-index: -1;
  }
  .abstract,
  .lightning,
  .coverage {
    color: #e6db74;
    font-size: 4vw;
    line-height: 1;
    font-weight: 600;
    text-align: center;
    white-space: nowrap;
  }
  .abstract,
  .code,
