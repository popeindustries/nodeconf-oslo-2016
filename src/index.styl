@import './lib/normalize.css';
@import './lib/fonts.css';

BLACK = #050A07;
YR_BLUE = #00b9f1;
DARK_BLUE = darken(YR_BLUE, 60%);
GREEN = #41d041;
RED = #d21111;
RATIO = 16/9;
RATIO_INVERT = 9/16;
TRANSITION_DURATION = 400ms;
TRANSITION_DURATION_SHORT = 200ms;
TRANSITION_DURATION_LONG = 800ms;
TRANSITION_TIMING_CUBIC_OUT = cubic-bezier(0.215, 0.61, 0.355, 1);

full() {
  bottom: 0;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
}
bg(path) {
  background-image: url(path);
  background-position: bottom center;
  background-size: cover;
}
@keyframes loadBounce {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

html,
body {
  width: 100%;
  height: 100%;
}
html {
  background-color: BLACK;
}
body {
  color: BLACK;
  font-family: "Avenir Next", sans-serif;
  font-size: 16px;
  font-variant: normal;
  font-weight: 500;
  overflow: hidden;
  z-index: 0;
}
h1,
h2,
h3,
h4,
h5 {
  line-height: normal;
  margin: 0;
  padding: 0;
}
h1 {
  font-size: 4vw;
  font-weight: 900;
}
h2 {
  font-size: 2.2vw;
  font-weight: 400;
}
h3 {
  font-size: 2vw;
  font-weight: 400;
}
ul {
  margin: 0;
  padding: 0 0 0 0.5vw;
}
li {
  font-size: 1.8vw;
  list-style-type: none;
  padding: 0.5vw 0;
  &::before {
    display: inline-block;
    padding-right: 0.5vw;
  }
  &.good::before {
    content: '+';
    color: GREEN;
  }
  &.bad::before {
    content: 'â€”';
    color: RED;
  }
}
p {
  font-size: 1.8vw;
}
a {
  color: white;
  font-size: 1.8vw;
  text-decoration: none;
}
section {
  height: 100%;
  left: 0;
  opacity: 1;
  position: absolute;
  top: 0;
  transition: all TRANSITION_DURATION TRANSITION_TIMING_CUBIC_OUT;
  visibility: hidden;
  width: 100%;
  .presentation-notes & > .notes {
    display: block;
  }
  .presentation-notes & > *:not(.notes) {
    display: none;
  }
  &.show {
    visibility: visible;
  }
  &.hide {
    visibility: hidden;
  }
}
pre {
  margin: 0 0 0 -8vw;
  code {
    font-family: 'Hack', monospace;
    font-size: 2.2vw;
    padding: 0 !important;
    overflow: hidden !important;
    background-color: transparent !important;
  }
}
.slides {
  background-color: white;
  height: (RATIO_INVERT * 100)vw;
  left: 0;
  overflow: hidden;
  position: absolute;
  transform-origin: top left;
  top: 0;
  width: 100%;
}
.notes {
  background-color: white;
  color: BLACK;
  display: none;
  font-size: 3vw;
  font-weight: 400;
  text-align: left;
  z-index: 1000;
  full();
  .dev & {
    background-color: transparent;
    display: block;
    top: initial;
  }
  .note {
    left: 50%;
    margin: 0;
    opacity: 0;
    padding: 0;
    position: absolute;
    top: 50%;
    transform: translate(-50%, -50%);
    visibility: visible;
    width: 60%;
    .dev & {
      background-color: rgba(255,255,255,0.8);
      bottom: 0;
      font-size: 1.2vw;
      left: 0;
      top: initial;
      transform: none;
      padding: 1em;
      width: auto;
    }
  }
}

#title {
  color: #9FB26D;
  text-align: center;
  transition-duration: 500ms;
  h1 {
    line-height: 1;
    transition: all TRANSITION_DURATION TRANSITION_TIMING_CUBIC_OUT;
  }
  .top,
  .bottom {
    overflow: hidden;
    position: relative;
    transition: all TRANSITION_DURATION 100ms TRANSITION_TIMING_CUBIC_OUT;
    width: 100%;
    h1 {
      left: 50%;
      mix-blend-mode: difference;
      position: absolute;
      text-transform: uppercase;
    }
  }
  .top {
    bg('src/images/nodeconf-14.jpg');
    background-position: center top;
    height: 45%;
    h1 {
      bottom: -0.8vw;
      margin-left: -3vw;
      transform: translateX(-100%);
    }
  }
  .middle {
    left: 50%;
    mix-blend-mode: difference;
    position: absolute;
    top: 45%;
    z-index: 1;
    h1 {
      font-size: 3vw;
      font-weight: 500;
      transform: translate(-50%, -1.25vw);
    }
  }
  .bottom {
    bg('src/images/nodeconf-13.jpg');
    height: 55%;
    h1 {
      font-weight: 400;
      margin-left: 3vw;
      top: -0.4vw;
    }
  }
  &.hide {
    .top {
      transform: translateY(-100%);
      h1 {
        transform: translate(-100%, 100%);
      }
    }
    .middle h1 {
      opacity: 0;
    }
    .bottom {
      transform: translateY(100%);
      h1 {
        transform: translateY(-100%);
      }
    }
  }
}

#history {
  color: DARK_BLUE;
  transition-duration: TRANSITION_DURATION_LONG;
  .logo--yr,
  .partner-logos,
  .stats,
  .launch-date,
  .max-users,
  .mobile-users {
    position: absolute;
    transition: all TRANSITION_DURATION_SHORT TRANSITION_TIMING_CUBIC_OUT;
  }
  .logo--yr {
    height: 12vw;
    left: 50%;
    top: 45%;
    transform: translate(-50%, -50%);
    width: 12vw;
    z-index: 1;
  }
  .partner-logos {
    align-items: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
    left: 0;
    opacity: 0;
    position: absolute;
    top: 35%;
    width: 100%;
    .logo {
      margin: 0 3vw;
    }
    .logo--nrk {
      height: 12vw;
      width: 12vw;
    }
    .logo--met {
      height: 22vw;
      width: 22vw;
    }
  }
  .stats {
    bottom: 0;
    fill: YR_BLUE;
    height: 100%;
    right: 0;
    opacity: 1;
    stroke: darken(YR_BLUE, 20%);
    stroke-width: 2px;
    transform: scaleY(0);
    transform-origin: bottom;
    transition-duration: TRANSITION_DURATION;
    visibility: hidden;
    width: 100%;
    .mobile {
      fill: YR_BLUE;
      stroke: darken(YR_BLUE, 20%);
      visibility: hidden;
    }
  }
  .launch-date,
  .max-users,
  .mobile-users {
    opacity: 0;
  }
  .launch-date {
    left: 1.8vw;
    top: 45vw;
    &::after {
      content: '';
      background-color: DARK_BLUE;
      display: block;
      height: 10vw;
      left: 2.8vw;
      top: 100%;
      position: absolute;
      width: 1px;
    }
  }
  .max-users {
    right: 10vw;
    top: 1vh;
    &::after {
      content: '';
      background-color: DARK_BLUE;
      display: block;
      height: 1px;
      right: 0;
      transform: translateX(100%);
      top: 50%;
      position: absolute;
      width: 12vw;
    }
  }
  .mobile-users {
    top: 45vw;
    color: white;
    right: 10vw;
  }
  &.step-1 {
    .logo--yr {
      transform: translate(-50%, -125%);
    }
    .partner-logos {
      opacity: 1;
    }
  }
  &.step-2 {
    .partner-logos {
      opacity: 0;
    }
    .stats {
      visibility: visible;
      transform: scaleY(1);
    }
    .launch-date {
      opacity: 1;
    }
  }
  &.step-3 {
    .max-users {
      opacity: 1;
    }
  }
  &.step-4 {
    .stats {
      fill: lighten(YR_BLUE, 70%);
      stroke: lighten(YR_BLUE, 40%);
      .mobile {
        visibility: visible;
      }
    }
    .mobile-users {
      opacity: 1;
    }
  }
  &.hide {
    .logo--yr {
      opacity: 0;
    }
    .stats {
      opacity: 0;
      transform: scaleY(10);
      .mobile {
        visibility: hidden;
      }
    }
    .launch-date,
    .max-users,
    .mobile-users {
      opacity: 0;
    }
  }
}

#geography {
  color: DARK_BLUE;
  .map {
    fill: white;
    height: 100%;
    opacity: 0;
    stroke: lighten(YR_BLUE, 40%);
    stroke-width: 1;
    transform: scale(6);
    transition: all TRANSITION_DURATION TRANSITION_DURATION_SHORT TRANSITION_TIMING_CUBIC_OUT;
    width: 100%;
    path {
      transition: fill TRANSITION_DURATION_SHORT linear;
    }
  }
  .title,
  .no-users,
  .nk-users {
    background-color: rgba(255, 255, 255, 0.8);
    opacity: 0;
    padding: 0.5vw 1vw;
    position: absolute;
    transition: opacity TRANSITION_DURATION_SHORT linear;
  }
  .title {
    bottom: 2vw;
    left: 50%;
    transform: translateX(-50%);
  }
  .no-users {
    left: 44%;
    top: 22%;
  }
  .nk-users {
    right: 10%;
    top: 45%;
  }
  &.show {
    .map {
      opacity: 1;
      transform: scale(1);
    }
  }
  &.step-1 {
    path {
      fill: lighten(YR_BLUE, 70%);
      &.none {
        fill: white;
      }
    }
  }
  &.step-2 {
    path {
      &.med {
        fill: lighten(YR_BLUE, 20%);
        stroke: darken(YR_BLUE, 10%);
      }
      &.med-high {
        fill: lighten(YR_BLUE, 10%);
        stroke: darken(YR_BLUE, 10%);
      }
      &.high {
        fill: YR_BLUE;
        stroke: darken(YR_BLUE, 20%);
      }
    }
    .title,
    .no-users {
      opacity: 1;
    }
  }
  &.step-3 {
    .nk-users {
      opacity: 1;
    }
  }
  &.hide {
    .map,
    .title,
    .no-users,
    .nk-users {
      opacity: 0;
    }
  }
}

#mobile {
  perspective: 60rem;
  transition-duration: TRANSITION_DURATION_LONG;
  .m,
  .www,
  .phone {
    position: absolute;
    transition: transform TRANSITION_DURATION TRANSITION_TIMING_CUBIC_OUT, opacity TRANSITION_DURATION_SHORT linear;
  }
  .phone {
    height: 40vw;
    left: 50%;
    margin: -22vw 0 0 -10vw;
    opacity: 1;
    top: 50%;
    transform-style: preserve-3d;
    width: 20vw;
    will-change: transform, opacity;
    &.n95 {
      z-index: 1;
    }
    &.iphone {
      opacity: 0;
    }
    figure {
      backface-visibility: hidden;
      -webkit-backface-visibility: hidden;
      height: 100%;
      left: 0;
      margin: 0;
      position: absolute;
      text-align: center;
      top: 0;
      width: 100%;
      &.front {
        z-index: 2;
      }
      &.back {
        transform: rotateY(180deg);
      }
      img {
        height: 100%;
      }
      figcaption {
        display: block;
        font-size: 2.2vw;
        margin-top: 1vw;
      }
    }
  }
  .m,
  .www {
    left: 50%;
    opacity: 0;
    top: 30%;
  }
  .m {
    transform: translateX(-240%);
  }
  .www {
    transform: translateX(130%);
  }
  &.step-1 {
    .n95 {
      transform: rotateY(-180deg);
    }
  }
  &.step-2 {
    .n95 {
      transform: translateX(-60%) rotateY(-180deg);
      transition-duration: TRANSITION_DURATION_SHORT;
    }
    .iphone {
      opacity: 1;
      transform: translateX(60%);
    }
  }
  &.step-3 {
    .iphone {
      transform: translateX(50%) rotateY(180deg);
      transition-duration: TRANSITION_DURATION_SHORT;
    }
  }
  &.step-4 {
    .m {
      opacity: 1;
    }
  }
  &.step-5 {
    .www {
      opacity: 1;
    }
  }
  &.step-6 {
    .m,
    .www {
      opacity: 0;
    }
  }
  &.hide {
    opacity: 0;
    .m,
    .www,
    .n95,
    .iphone {
      opacity: 0;
    }
    .n95 {
      transform: translateX(-5%) rotateY(-90deg);
    }
    .iphone {
      transform: translateX(5%) rotateY(90deg);
    }
  }
}

#architecture {
  color: #3B4E64;
  font-weight: 400;
  opacity: 0;
  transition-duration: TRANSITION_DURATION_LONG;
  .bg {
    bg('src/images/nodeconf-8.jpg');
    full();
    -webkit-filter: blur(0) brightness(4);
    filter: blur(0) brightness(4);
    transition: all TRANSITION_DURATION_LONG TRANSITION_TIMING_CUBIC_OUT;
    z-index: -1;
  }
  .diagram-group {
    full()
    aside {
      opacity: 0;
      position: absolute;
      transition: opacity TRANSITION_DURATION_SHORT linear;
    }
  }
  .diagram {
    height: 12vw;
    left: 50%;
    opacity: 0;
    position: absolute;
    transition: transform TRANSITION_DURATION TRANSITION_TIMING_CUBIC_OUT, opacity TRANSITION_DURATION_SHORT linear;
    transform: translate(-50%, -50%);
    top: 40%;
    width: 12vw;
    z-index: 1000;
    &.old {
      transform: translate(-50%, -50%) scale(0.5);
    }
    &.new-api {
      .api-2 {
        opacity: 0;
      }
    }
    &.new-renderer {
      .ring {
        opacity: 0;
      }
    }
    svg {
      height: 100%;
      width: 100%;
      .api {
        fill: #DC7E0A;
        stroke: darken(#DC7E0A, 25%);
      }
      .data {
        fill: #F3DA5E;
        stroke: darken(#F3DA5E, 30%);
      }
      .renderer {
        fill: #2C8190;
        stroke: darken(#2C8190, 15%);
      }
      .text {
        fill: #3B4E64;
        stroke: #3B4E64;
        circle,
        line {
          stroke-dasharray: 2 2;
          opacity: 0.4
        }
        text {
          stroke: none;
        }
      }
    }
  }
  .old-aside {
    left: 50%;
    text-align: right;
    top: 40%;
    transform: translate(-150%, -50%);
    width: 20vw;
    h3 {
      margin: 2vw 0;
    }
  }
  &.show {
    opacity: 1;
    .bg {
      -webkit-filter: blur(0) brightness(1);
      filter: blur(0) brightness(1);
    }
  }
  &.step-1 {
    .bg {
      -webkit-filter: blur(5px) brightness(1);
      filter: blur(5px) brightness(1);
    }
    .old {
      opacity: 1;
      transform: translate(-50%, -50%);
    }
  }
  &.step-2 {
    .old-aside {
      opacity: 1;
    }
  }
  &.step-3 {
    .old {
      opacity: 0.5;
      transform: translate(-300%, -50%);
    }
    .old-aside {
      opacity: 0;
    }
  }
  &.step-4 {
    .new-data {
      opacity: 1;
    }
  }
  &.step-5 {
    .new-data {
      transform: translate(-50%, -150%);
    }
    .new-api,
    .new-renderer {
      opacity: 1;
      transform: translate(30%, -50%);
    }
  }
  &.step-6 {
    .new-api {
      transform: translate(50%, -75%);
      .api-2 {
        opacity: 1;
      }
    }
    .new-renderer {
      transform: translate(-50%, -25%);
      .ring {
        opacity: 0.4;
      }
    }
  }
  &.step-7 {
    .old {
      opacity: 1;
    }
  }
  &.hide {
    opacity: 0;
    .bg {
      -webkit-filter: blur(5px) brightness(4);
      filter: blur(5px) brightness(4);
    }
  }
}

