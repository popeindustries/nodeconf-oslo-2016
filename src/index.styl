@import './lib/normalize.css';
@import './lib/fonts.css';

BLACK = #050A07;
YR_BLUE = #00b9f1;
DARK_BLUE = darken(YR_BLUE, 60%);
GREEN = #41d041;
RED = #d21111;
TRANSITION_DURATION = 400ms;
TRANSITION_DURATION_SHORT = 200ms;
TRANSITION_DURATION_LONG = 800ms;
TRANSITION_TIMING_CUBIC_OUT = cubic-bezier(0.215, 0.61, 0.355, 1);

full() {
  bottom: 0;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
}
bg(path) {
  background-image: url(path);
  background-position: bottom center;
  background-size: cover;
}

html,
body {
  width: 100%;
  height: 100%;
}
html {
  background-color: BLACK;
}
body {
  color: BLACK;
  font-family: "Avenir Next", sans-serif;
  font-size: 16px;
  font-variant: normal;
  font-weight: 500;
  overflow: hidden;
  z-index: 0;
}
h1,
h2,
h3,
h4,
h5 {
  line-height: normal;
  margin: 0;
  padding: 0;
}
h1 {
  font-size: 4vw;
  font-weight: 900;
}
h2 {
  font-size: 2.2vw;
  font-weight: 400;
}
h3 {
  font-size: 1.4vw;
  font-weight: 400;
}
ul {
  margin: 0;
  padding: 0 0 0 0.5vw;
}
li {
  font-size: 1.2vw;
  list-style-type: none;
  padding: 0.5vw 0;
  &::before {
    display: inline-block;
    padding-right: 0.5vw;
  }
  &.good::before {
    content: '+';
    color: GREEN;
  }
  &.bad::before {
    content: 'â€”';
    color: RED;
  }
}
section {
  height: 100%;
  left: 0;
  opacity: 1;
  position: absolute;
  top: 0;
  transition: all TRANSITION_DURATION TRANSITION_TIMING_CUBIC_OUT;
  visibility: hidden;
  width: 100%;
  .presentation-notes & > .notes {
    display: block;
  }
  .presentation-notes & > *:not(.notes) {
    display: none;
  }
  &.show {
    visibility: visible;
  }
  &.hide {
    visibility: hidden;
  }
}
pre {
  margin: 0 0 0 -8vw;
  code {
    font-family: 'Hack', monospace;
    font-size: 2.2vw;
    padding: 0 !important;
    overflow: hidden !important;
    background-color: transparent !important;
  }
}
.slides {
  left: 0;
  overflow: hidden;
  position: absolute;
  transform-origin: top left;
  top: 0;
}
.notes {
  background-color: white;
  color: BLACK;
  display: none;
  font-size: 3vw;
  font-weight: 400;
  text-align: left;
  z-index: 1000;
  full();
  .dev & {
    background-color: rgba(255,255,255,0.8);
    display: block;
    font-size: 1vw;
    top: 94vh;
  }
  .note {
    left: 50%;
    margin: 0;
    opacity: 0;
    padding: 0;
    position: absolute;
    top: 50%;
    transform: translate(-50%, -50%);
    visibility: visible;
    width: 60%;
    .dev & {
      margin: 0 1vw;
      width: 99vw;
    }
  }
}

#title {
  color: #9FB26D;
  text-align: center;
  transition-duration: 500ms;
  h1 {
    line-height: 1;
    transition: all TRANSITION_DURATION TRANSITION_TIMING_CUBIC_OUT;
  }
  .top,
  .bottom {
    overflow: hidden;
    position: relative;
    transition: all TRANSITION_DURATION 100ms TRANSITION_TIMING_CUBIC_OUT;
    width: 100%;
    h1 {
      left: 50%;
      mix-blend-mode: difference;
      position: absolute;
      text-transform: uppercase;
    }
  }
  .top {
    bg('src/images/nodeconf-14.jpg');
    background-position: center top;
    height: 45%;
    h1 {
      bottom: -0.8vw;
      margin-left: -3rem;
      transform: translateX(-100%);
    }
  }
  .middle {
    left: 50%;
    mix-blend-mode: difference;
    position: absolute;
    top: 45%;
    z-index: 1;
    h1 {
      font-size: 3vw;
      font-weight: 500;
      transform: translate(-50%, -1.25vw);
    }
  }
  .bottom {
    bg('src/images/nodeconf-13.jpg');
    height: 55%;
    h1 {
      font-weight: 400;
      margin-left: 3rem;
      top: -0.4vw;
    }
  }
  &.hide {
    .top {
      transform: translateY(-100%);
      h1 {
        transform: translate(-100%, 100%);
      }
    }
    .middle h1 {
      opacity: 0;
    }
    .bottom {
      transform: translateY(100%);
      h1 {
        transform: translateY(-100%);
      }
    }
  }
}

#history {
  color: DARK_BLUE;
  transition-duration: TRANSITION_DURATION_LONG;
  .logo--yr,
  .partner-logos,
  .stats,
  .launch-date,
  .max-users,
  .mobile-users {
    position: absolute;
    transition: all TRANSITION_DURATION_SHORT TRANSITION_TIMING_CUBIC_OUT;
  }
  .logo--yr {
    height: 10em;
    left: 50%;
    top: 45%;
    transform: translate(-50%, -50%);
    width: 10em;
    z-index: 1;
  }
  .partner-logos {
    align-items: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
    left: 0;
    opacity: 0;
    position: absolute;
    top: 35%;
    width: 100%;
    .logo {
      margin: 0 2em;
    }
    .logo--nrk {
      height: 10em;
      width: 10em;
    }
    .logo--met {
      height: 18em;
      width: 18em;
    }
  }
  .stats {
    bottom: 0;
    fill: YR_BLUE;
    right: 0;
    opacity: 1;
    stroke: darken(YR_BLUE, 20%);
    stroke-width: 2px;
    transform: scaleY(0);
    transform-origin: bottom;
    transition-duration: TRANSITION_DURATION;
    visibility: hidden;
    .mobile {
      fill: YR_BLUE;
      stroke: darken(YR_BLUE, 20%);
      visibility: hidden;
    }
  }
  .launch-date,
  .max-users,
  .mobile-users {
    opacity: 0;
  }
  .launch-date {
    right: 1610px;
    bottom: 150px;
    &::after {
      content: '';
      background-color: DARK_BLUE;
      display: block;
      height: 200px;
      left: 50px;
      top: 100%;
      position: absolute;
      width: 2px;
    }
  }
  .max-users {
    right: 240px;
    bottom: 1020px;
    &::after {
      content: '';
      background-color: DARK_BLUE;
      display: block;
      height: 2px;
      right: 0;
      transform: translateX(100%);
      top: 50%;
      position: absolute;
      width: 240px;
    }
  }
  .mobile-users {
    bottom: 50px;
    color: white;
    right: 240px;
  }
  &.step-1 {
    .logo--yr {
      transform: translate(-50%, -150%);
    }
    .partner-logos {
      opacity: 1;
    }
  }
  &.step-2 {
    .partner-logos {
      opacity: 0;
    }
    .stats {
      visibility: visible;
      transform: scaleY(1);
    }
    .launch-date {
      opacity: 1;
    }
  }
  &.step-3 {
    .max-users {
      opacity: 1;
    }
  }
  &.step-4 {
    .stats {
      fill: lighten(YR_BLUE, 70%);
      stroke: lighten(YR_BLUE, 40%);
      .mobile {
        visibility: visible;
      }
    }
    .mobile-users {
      opacity: 1;
    }
  }
  &.hide {
    .logo--yr {
      opacity: 0;
    }
    .stats {
      opacity: 0;
      transform: scaleY(10);
      .mobile {
        visibility: hidden;
      }
    }
    .launch-date,
    .max-users,
    .mobile-users {
      opacity: 0;
    }
  }
}

#geography {
  color: DARK_BLUE;
  .map {
    fill: white;
    height: 100%;
    opacity: 0;
    stroke: lighten(YR_BLUE, 40%);
    stroke-width: 1;
    transform: scale(6);
    transition: all TRANSITION_DURATION TRANSITION_DURATION_SHORT TRANSITION_TIMING_CUBIC_OUT;
    width: 100%;
    path {
      transition: fill TRANSITION_DURATION_SHORT linear;
    }
  }
  .title,
  .no-users,
  .nk-users {
    background-color: rgba(255, 255, 255, 0.8);
    opacity: 0;
    padding: 0.5vw 1vw;
    position: absolute;
    transition: opacity TRANSITION_DURATION_SHORT linear;
  }
  .title {
    bottom: 2vw;
    left: 50%;
    transform: translateX(-50%);
  }
  .no-users {
    left: 44%;
    top: 22%;
  }
  .nk-users {
    right: 10%;
    top: 45%;
  }
  &.show {
    .map {
      opacity: 1;
      transform: scale(1);
    }
  }
  &.step-1 {
    path {
      fill: lighten(YR_BLUE, 70%);
      &.none {
        fill: white;
      }
    }
  }
  &.step-2 {
    path {
      &.med {
        fill: lighten(YR_BLUE, 20%);
        stroke: darken(YR_BLUE, 10%);
      }
      &.med-high {
        fill: lighten(YR_BLUE, 10%);
        stroke: darken(YR_BLUE, 10%);
      }
      &.high {
        fill: YR_BLUE;
        stroke: darken(YR_BLUE, 20%);
      }
    }
    .title,
    .no-users {
      opacity: 1;
    }
  }
  &.step-3 {
    .nk-users {
      opacity: 1;
    }
  }
  &.hide {
    .map,
    .title,
    .no-users,
    .nk-users {
      opacity: 0;
    }
  }
}

#mobile {
  perspective: 60rem;
  transition-duration: TRANSITION_DURATION_LONG;
  .m,
  .www,
  .phone {
    position: absolute;
    transition: transform TRANSITION_DURATION TRANSITION_TIMING_CUBIC_OUT, opacity TRANSITION_DURATION_SHORT linear;
  }
  .phone {
    height: 875px;
    left: 50%;
    margin: -400px 0 0 -250px;
    top: 50%;
    transform-style: preserve-3d;
    width: 500px;
    will-change: transform, opacity;
    &.n95 {
      z-index: 1;
    }
    &.iphone {
      opacity: 0;
    }
    figure {
      backface-visibility: hidden;
      height: 100%;
      left: 0;
      margin: 0;
      position: absolute;
      text-align: center;
      top: 0;
      width: 100%;
      &.front {
        z-index: 2;
      }
      &.back {
        transform: rotateY(180deg);
      }
      figcaption {
        display: block;
        font-size: 1.4vw;
        margin-top: 1vw;
      }
    }
  }
  .m,
  .www {
    left: 50%;
    opacity: 0;
    top: 30%;
  }
  .m {
    transform: translateX(-200%);
  }
  .www {
    transform: translateX(200%);
  }
  &.step-1 {
    .n95 {
      transform: rotateY(-180deg);
    }
  }
  &.step-2 {
    .m {
      transform: translateX(-300%);
    }
    .n95 {
      transform: translateX(-50%) rotateY(-180deg);
      transition-duration: TRANSITION_DURATION_SHORT;
    }
    .iphone {
      opacity: 1;
      transform: translateX(50%);
    }
  }
  &.step-3 {
    .iphone {
      transform: translateX(50%) rotateY(180deg);
      transition-duration: TRANSITION_DURATION_SHORT;
    }
  }
  &.step-4 {
    .m {
      opacity: 1;
    }
  }
  &.step-5 {
    .www {
      opacity: 1;
    }
  }
  &.hide {
    opacity: 0;
    .m,
    .www,
    .n95,
    .iphone {
      opacity: 0;
    }
    .n95 {
      transform: translateX(-5%) rotateY(-90deg);
    }
    .iphone {
      transform: translateX(5%) rotateY(90deg);
    }
  }
}

#architecture {
  font-weight: 400;
  opacity: 0;
  transition-duration: TRANSITION_DURATION_LONG;
  .bg {
    bg('src/images/nodeconf-8.jpg');
    full();
    -webkit-filter: blur(0) brightness(4);
    filter: blur(0) brightness(4);
    transition: all TRANSITION_DURATION_LONG TRANSITION_TIMING_CUBIC_OUT;
    z-index: -1;
  }
  .diagram-group {
    full()
    aside {
      opacity: 0;
      position: absolute;
      transition: opacity TRANSITION_DURATION_SHORT linear;
    }
  }
  .diagram {
    bottom: 50%;
    left: 48%;
    opacity: 0;
    position: absolute;
    transform: scale(2.5);
    transition: transform TRANSITION_DURATION TRANSITION_TIMING_CUBIC_OUT, opacity TRANSITION_DURATION_SHORT linear;
    &.old {
      transform: translateY(0) scale(0.5);
    }
    &.new-api {
      .api-2 {
        opacity: 0;
      }
    }
    &.new-renderer {
      .ring {
        opacity: 0;
      }
    }
    .api {
      fill: #DC7E0A;
    }
    .data {
      fill: #F3DA5E;
    }
    .renderer {
      fill: #2C8190;
    }
    .text {
      fill: #3B4E64;
      stroke: #3B4E64;
      circle,
      line {
        stroke-dasharray: 2 2;
        opacity: 0.4
      }
      text {
        stroke: none;
      }
    }
  }
  .old-aside {
    bottom: 50%;
    left: 48%;
    transform: translateX(-175%)
  }
  &.show {
    opacity: 1;
    .bg {
      -webkit-filter: blur(0) brightness(1);
      filter: blur(0) brightness(1);
    }
  }
  &.step-1 {
    .bg {
      -webkit-filter: blur(5px) brightness(1);
      filter: blur(5px) brightness(1);
    }
    .old {
      opacity: 1;
      transform: translateY(0) scale(2.5);
    }
  }
  &.step-2 {
    .old-aside {
      opacity: 1;
    }
  }
  &.step-3 {
    .old {
      opacity: 0.5;
      transform: translate(-600%, 0) scale(2.5);
    }
    .old-aside {
      opacity: 0  ;
    }
  }
  &.step-4 {
    .new-data {
      opacity: 1;
    }
  }
  &.step-5 {
    .new-data {
      transform: translate(0, -250%) scale(2.5);
    }
    .new-api,
    .new-renderer {
      opacity: 1;
      transform: translate(150%, -25%) scale(2.5);
    }
  }
  &.step-6 {
    .new-data {
      transform: translate(-50%, -275%) scale(2.5);
    }
    .new-api {
      transform: translate(200%, -150%) scale(2.5);
      .api-2 {
        opacity: 1;
      }
    }
    .new-renderer {
      transform: translate(0, 0) scale(2.5);
      .ring {
        opacity: 0.4;
      }
    }
  }
  &.hide {
    opacity: 0;
    .bg {
      -webkit-filter: blur(5px) brightness(4);
      filter: blur(5px) brightness(4);
    }
  }
}

#universal {
  opacity: 0;
  transition-duration: TRANSITION_DURATION_LONG;
  .bg {
    bg('src/images/nodeconf-10.jpg');
    full();
    -webkit-filter: brightness(4);
    filter: brightness(4);
    transition: all TRANSITION_DURATION_LONG TRANSITION_TIMING_CUBIC_OUT;
    z-index: -1;
  }
  .points {
    full();
    bottom: 10%;
    color: #4D3F3E;
    display: flex;
    flex-direction: column;
    justify-content: center;
    transition: opacity TRANSITION_DURATION linear;
    .point {
      font-size: 4vw;
      margin: 0 0 0 40%;
      opacity: 0;
      transition: all TRANSITION_DURATION_SHORT linear;
    }
  }
  &.show {
    opacity: 1;
    .bg {
      -webkit-filter: brightness(1);
      filter: brightness(1);
    }
  }
  &.step-1 {
    .point-1 {
      opacity: 1;
    }
  }
  &.step-2 {
    .point-2 {
      opacity: 1;
    }
  }
  &.step-3 {
    .point-3 {
      opacity: 1;
    }
  }
  &.step-4 {
    .point-4 {
      opacity: 1;
    }
  }
  &.step-5 {
    .point {
      color: #82665E;
      &::first-letter {
        color: #FEF1B5;
        font-weight: 600;
        padding-right: 1vw;
      }
    }
    .point-2 {
      transition-delay: 25ms;
    }
    .point-3 {
      transition-delay: 100ms;
    }
    .point-4 {
      transition-delay: 150ms;
    }
  }
  &.step-6 {
    .point {
      opacity: 0;
    }
  }
  &.hide {
    opacity: 0;
    .bg {
      -webkit-filter: brightness(0);
      filter: brightness(0);
    }
    .points {
      opacity: 0;
    }
  }
}

