@import './lib/normalize.css';
@import './lib/fonts.css';

BLACK = #050A07;
LIGHT_GREEN = #D7E4AE;
DARK_YELLOW = #322C10;
YR_BLUE = #00b9f1;
TRANSITION_DURATION = 400ms;
TRANSITION_DURATION_SHORT = 200ms;
TRANSITION_DURATION_LONG = 800ms;
TRANSITION_TIMING_CUBIC_OUT = cubic-bezier(0.215, 0.61, 0.355, 1);

html,
body {
  width: 100%;
  height: 100%;
}
html {
  background-color: BLACK;
}
body {
  color: white;
  font-family: "Avenir Next", sans-serif;
  font-size: 16px;
  font-variant: normal;
  font-weight: 500;
  overflow: hidden;
  z-index: 0;
}
h1,
h2,
h3,
h4,
h5 {
  margin: 0;
  padding: 0;
}
h1 {
  font-size: 6em;
  font-weight: 900;
}
section {
  height: 100%;
  left: 0;
  opacity: 1;
  position: absolute;
  top: 0;
  transition: all TRANSITION_DURATION TRANSITION_TIMING_CUBIC_OUT;
  visibility: hidden;
  width: 100%;
  &.show {
    visibility: visible;
  }
  &.hide {
    visibility: hidden;
  }
}
.partial {
  opacity: 0;
  transition: all 0.5s;
  &.show {
    opacity: 1;
  }
}

#title {
  color: #9FB26D;
  text-align: center;
  transition-duration: 500ms;
  h1 {
    line-height: 1;
    transition: all TRANSITION_DURATION TRANSITION_TIMING_CUBIC_OUT;
  }
  .top,
  .bottom {
    background-size: cover;
    overflow: hidden;
    position: relative;
    transition: all TRANSITION_DURATION 100ms TRANSITION_TIMING_CUBIC_OUT;
    width: 100%;
    h1 {
      font-size: 4vw;
      left: 50%;
      mix-blend-mode: difference;
      position: absolute;
      text-transform: uppercase;
    }
  }
  .top {
    background-image: url('src/images/nodeconf-14.jpg');
    background-position: center top;
    height: 45%;
    h1 {
      bottom: -0.8vw;
      margin-left: -3rem;
      transform: translateX(-100%);
    }
  }
  .middle {
    left: 50%;
    mix-blend-mode: difference;
    position: absolute;
    top: 45%;
    z-index: 1;
    h1 {
      font-size: 3vw;
      font-weight: 500;
      transform: translate(-50%, -1.25vw);
    }
  }
  .bottom {
    background-image: url('src/images/nodeconf-13.jpg');
    background-position: center bottom;
    height: 55%;
    h1 {
      font-weight: 400;
      height: 4vw;
      margin-left: 3rem;
      top: -0.4vw;
    }
  }
  &.hide {
    .top {
      transform: translateY(-100%);
      h1 {
        transform: translate(-100%, 100%);
      }
    }
    .middle h1 {
      opacity: 0;
    }
    .bottom {
      transform: translateY(100%);
      h1 {
        transform: translateY(-100%);
      }
    }
  }
}

#history {
  align-items: center;
  background-color: white;
  transition-duration: TRANSITION_DURATION_LONG;
  .logo--yr,
  .partner-logos,
  .stats {
    position: absolute;
    transition: all TRANSITION_DURATION_SHORT TRANSITION_TIMING_CUBIC_OUT;
  }
  .logo--yr {
    height: 10em;
    left: 50%;
    top: 45%;
    transform: translate(-50%, -50%);
    width: 10em;
    z-index: 1;
  }
  .partner-logos {
    align-items: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
    left: 0;
    opacity: 0;
    position: absolute;
    top: 35%;
    width: 100%;
    .logo {
      margin: 0 2em;
    }
    .logo--nrk {
      height: 10em;
      width: 10em;
    }
    .logo--met {
      height: 18em;
      width: 18em;
    }
  }
  .stats {
    bottom: 0;
    fill: #00b9f1;
    height: 100%;
    right: 0;
    opacity: 1;
    transform: scaleY(0);
    transform-origin: bottom;
    transition-duration: TRANSITION_DURATION;
    visibility: hidden;
    width: 100%;
    .stat-grad-stop-1 {
      stop-color: YR_BLUE;
    }
    .stat-grad-stop-2 {
      stop-color: BLACK;
    }
    .mobile {
      visibility: hidden;
    }
  }
  &.step-1 {
    .logo--yr {
      transform: translate(-50%, -150%);
    }
    .partner-logos {
      opacity: 1;
    }
  }
  &.step-2 {
    .partner-logos {
      opacity: 0;
    }
    .stats {
      visibility: visible;
      transform: scaleY(1);
    }
  }
  &.step-3 {
    .stats .mobile {
      visibility: visible;
    }
  }
  &.hide {
    .logo--yr {
      opacity: 0;
    }
    .stats {
      opacity: 0;
      transform: scaleY(10);
      .mobile {
        visibility: hidden;
      }
    }
  }
}

#geo {
  background-color: white;
  .map {
    height: 100%;
    width: 100%;
  }
  path {
    fill: lighten(YR_BLUE, 70%);
    stroke: lighten(YR_BLUE, 40%);
    stroke-width: 1;
    &.med {
      fill: lighten(YR_BLUE, 20%);
      stroke: darken(YR_BLUE, 10%);
    }
    &.med-high {
      fill: lighten(YR_BLUE, 10%);
      stroke: darken(YR_BLUE, 10%);
    }
    &.high {
      fill: YR_BLUE;
      stroke: darken(YR_BLUE, 20%);
    }
    &.none {
      fill: white;
    }
  }
}

#architecture {
  background-image: url('src/images/nodeconf-8.jpg');
  background-position: bottom center;
  background-size: cover;
}